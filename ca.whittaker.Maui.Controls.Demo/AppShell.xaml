<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ca.whittaker.Maui.Controls.Demo.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ca.whittaker.Maui.Controls.Demo"
    xmlns:views="clr-namespace:ca.whittaker.Maui.Controls.Demo.Views"
    Shell.FlyoutBehavior="Flyout"
    Title="ca.whittaker.Maui.Controls.Demo">

    <!-- Flyout (Hamburger Menu) Items -->
    <FlyoutItem Route="LoggedOut" x:Name="LoggedOutLayout" FlyoutDisplayOptions="AsMultipleItems" IsVisible="True">
            <ShellContent Title="Login" Route="LoggedOutPage" ContentTemplate="{DataTemplate views:LoginLogoutPage}" />
    </FlyoutItem>
    <!-- Flyout (Hamburger Menu) Items -->
    <FlyoutItem Route="LoggedIn" x:Name="LoggedInLayout"  IsVisible="False"
                FlyoutDisplayOptions="AsMultipleItems">
        <Tab Title="Account">
            <ShellContent Title="Login" Route="LoggedInPage" ContentTemplate="{DataTemplate views:LoginLogoutPage}" />
            <ShellContent Title="Profile" Route="UserProfilePage" ContentTemplate="{DataTemplate views:UserProfilePage}" />
        </Tab>
    </FlyoutItem>

</Shell>
