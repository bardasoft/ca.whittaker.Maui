<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ca.whittaker.Maui.Controls.Demo.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ca.whittaker.Maui.Controls.Demo"
    xmlns:views="clr-namespace:ca.whittaker.Maui.Controls.Demo.Views"
    xmlns:strings="clr-namespace:ca.whittaker.Maui.Controls.Demo.Resources.Strings"    
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        
        <Tab Title="Account Management">
            
            <ShellContent Title="{x:Static strings:AppResources.Tab_LoginLogout}" Icon="home_24.png" FlyoutIcon="home_24.png" Route="LoginLogoutPage" ContentTemplate="{DataTemplate views:LoginLogoutPage}" />
            <ShellContent Title="{x:Static strings:AppResources.Tab_UserProfile}"  Icon="form_yellow_24.png" Route="UserProfilePage" ContentTemplate="{DataTemplate views:UserProfilePage}" />
            <ShellContent Title="{x:Static strings:AppResources.Tab_TextBox}"  Icon="form_yellow_24.png" Route="SampleTextBox" ContentTemplate="{DataTemplate views:SampleTextBox}" />
            <ShellContent Title="{x:Static strings:AppResources.Tab_CheckBox}"  Icon="form_yellow_24.png" Route="SampleCheckBoxPage" ContentTemplate="{DataTemplate views:SampleCheckBoxPage}" />
            
        </Tab>
        
    </TabBar>
    
</Shell>
