<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFrameworks>net8.0-android;net8.0-ios;net8.0-maccatalyst</TargetFrameworks>
		<TargetFrameworks Condition="$([MSBuild]::IsOSPlatform('windows'))">$(TargetFrameworks);net8.0-windows10.0.19041.0</TargetFrameworks>
		<!-- Uncomment to also build the tizen app. You will need to install tizen by following this: https://github.com/Samsung/Tizen.NET -->
		<!-- <TargetFrameworks>$(TargetFrameworks);net8.0-tizen</TargetFrameworks> -->
		<UseMaui>true</UseMaui>
		<SingleProject>true</SingleProject>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>
 
		<SupportedOSPlatformVersion Condition="$([MSBuild]::GetTargetPlatformIdentifier('$(TargetFramework)')) == 'ios'">11.0</SupportedOSPlatformVersion>
		<SupportedOSPlatformVersion Condition="$([MSBuild]::GetTargetPlatformIdentifier('$(TargetFramework)')) == 'maccatalyst'">13.1</SupportedOSPlatformVersion>
		<SupportedOSPlatformVersion Condition="$([MSBuild]::GetTargetPlatformIdentifier('$(TargetFramework)')) == 'android'">21.0</SupportedOSPlatformVersion>
		<SupportedOSPlatformVersion Condition="$([MSBuild]::GetTargetPlatformIdentifier('$(TargetFramework)')) == 'windows'">10.0.17763.0</SupportedOSPlatformVersion>
		<TargetPlatformMinVersion Condition="$([MSBuild]::GetTargetPlatformIdentifier('$(TargetFramework)')) == 'windows'">10.0.17763.0</TargetPlatformMinVersion>
		<SupportedOSPlatformVersion Condition="$([MSBuild]::GetTargetPlatformIdentifier('$(TargetFramework)')) == 'tizen'">6.5</SupportedOSPlatformVersion>
		<GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <PackageReadmeFile>README.md</PackageReadmeFile>
		<Title>Custom controls for .NET8 MAUI</Title>
		<Authors>Brett Whittaker</Authors>
		<Description>form controls for .NET8 MAUI</Description>
		<RepositoryUrl>https://github.com/bwhittaker69/ca.whittaker.Maui</RepositoryUrl>
		<RepositoryType>git</RepositoryType>
		<PackageTags>MAUI;MAUI form controls</PackageTags>
		<PackageLicenseFile>LICENSE.txt</PackageLicenseFile>
    <MyVersionPrefix>1.0.3</MyVersionPrefix>
    <MyVersion>1</MyVersion>
    <PackageProjectUrl>https://github.com/bwhittaker69/ca.whittaker.Maui</PackageProjectUrl>
		<PackageIcon>bwhittaker69.png</PackageIcon>
		<AssemblyVersion>$(MyVersionPrefix)</AssemblyVersion>
		<FileVersion>$(MyVersion)</FileVersion>
		<Version>$(MyVersionPrefix)</Version>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)|$(TargetFramework)|$(Platform)'=='Debug|net8.0-android|AnyCPU'">
	  <ApplicationDisplayVersion>$(VersionPrefix)</ApplicationDisplayVersion>
	  <ApplicationVersion>$(Version)</ApplicationVersion>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)|$(TargetFramework)|$(Platform)'=='Debug|net8.0-ios|AnyCPU'">
	  <ApplicationDisplayVersion>$(VersionPrefix)</ApplicationDisplayVersion>
	  <ApplicationVersion>$(Version)</ApplicationVersion>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)|$(TargetFramework)|$(Platform)'=='Debug|net8.0-maccatalyst|AnyCPU'">
	  <ApplicationDisplayVersion>$(VersionPrefix)</ApplicationDisplayVersion>
	  <ApplicationVersion>$(Version)</ApplicationVersion>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)|$(TargetFramework)|$(Platform)'=='Debug|net8.0-windows10.0.19041.0|AnyCPU'">
	  <ApplicationDisplayVersion>$(VersionPrefix)</ApplicationDisplayVersion>
	  <ApplicationVersion>$(Version)</ApplicationVersion>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)|$(TargetFramework)|$(Platform)'=='Release|net8.0-android|AnyCPU'">
	  <ApplicationDisplayVersion>$(VersionPrefix)</ApplicationDisplayVersion>
	  <ApplicationVersion>$(Version)</ApplicationVersion>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)|$(TargetFramework)|$(Platform)'=='Release|net8.0-ios|AnyCPU'">
	  <ApplicationDisplayVersion>$(VersionPrefix)</ApplicationDisplayVersion>
	  <ApplicationVersion>$(Version)</ApplicationVersion>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)|$(TargetFramework)|$(Platform)'=='Release|net8.0-maccatalyst|AnyCPU'">
	  <ApplicationDisplayVersion>$(VersionPrefix)</ApplicationDisplayVersion>
	  <ApplicationVersion>$(Version)</ApplicationVersion>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)|$(TargetFramework)|$(Platform)'=='Release|net8.0-windows10.0.19041.0|AnyCPU'">
	  <ApplicationDisplayVersion>$(VersionPrefix)</ApplicationDisplayVersion>
	  <ApplicationVersion>$(Version)</ApplicationVersion>
	</PropertyGroup>

	<ItemGroup>
	  <None Remove="Resources\Images\apple_24_disabled_mauiimage.png" />
	  <None Remove="Resources\Images\apple_48_disabled_mauiimage.png" />
	  <None Remove="Resources\Images\cancel_24_disabled_mauiimage.png" />
	  <None Remove="Resources\Images\cancel_48_disabled_mauiimage.png" />
	  <None Remove="Resources\Images\facebook_24_disabled_mauiimage.png" />
	  <None Remove="Resources\Images\generic_24_disabled_mauiimage.png" />
	  <None Remove="Resources\Images\generic_48_disabled_mauiimage.png" />
	  <None Remove="Resources\Images\google_24_disabled_mauiimage.png" />
	  <None Remove="Resources\Images\google_48_disabled_mauiimage.png" />
	  <None Remove="Resources\Images\linkedin_24_disabled_mauiimage.png" />
	  <None Remove="Resources\Images\linkedin_48_disabled_mauiimage.png" />
	  <None Remove="Resources\Images\microsoft_24_disabled_mauiimage.png" />
	  <None Remove="Resources\Images\microsoft_48_disabled_mauiimage.png" />
	  <None Remove="Resources\Images\save_24_disabled_mauiimage.png" />
	  <None Remove="Resources\Images\save_48_disabled_mauiimage.png" />
	  <None Remove="Resources\Images\signout_24_disabled_mauiimage.png" />
	  <None Remove="Resources\Images\signout_48_disabled_mauiimage.png" />
	  <None Remove="Resources\Images\tiktok_24_disabled_mauiimage.png" />
	  <None Remove="Resources\Images\tiktok_48_disabled_mauiimage.png" />
	  <None Remove="Resources\Images\undo_24_disabled_mauiimage.png" />
	  <None Remove="Resources\Images\undo_48_disabled_mauiimage.png" />
	</ItemGroup>

  <ItemGroup>
    <None Include="..\..\bwhittaker69.png">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <None Include="..\..\LICENSE.txt">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Include="..\..\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>


	<ItemGroup>
		<PackageReference Include="Microsoft.Maui.Controls" Version="$(MauiVersion)" />
		<PackageReference Include="Microsoft.Maui.Controls.Compatibility" Version="$(MauiVersion)" />
	</ItemGroup>

</Project>
